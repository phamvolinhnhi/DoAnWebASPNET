<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - DoAn</title>
    <link rel="shortcut icon" href="~/Images/shortcuticon.png" type="image/png" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" type="text/css" href="chrome-extension://gobpkdmjnhpopmpddhmhmbhkiienpfdo/css/translate_popup.css" />
    @*<link rel="stylesheet" href="~/CSS/user.css" type="text/css" />*@
    <link rel="stylesheet" href="~/CSS/me.css" />

    <link rel="stylesheet" href="~/CSS/admin2.css" type="text/css" />
    <link rel="stylesheet" href="~/CSS/StyleSheet1.css" type="text/css" />

    @Scripts.Render("~/bundles/modernizr")

    @Styles.Render("~/Content/DevExtremeBundle")

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/Scripts/DevExtremeBundle")

</head>
<body>
    <header>
        <div class="top">
            <div class="div_middle">
                <div class="logo">
                    <a href="/" title="DoAn - Sách điện tử">
                        <img alt="DoAn" src="~/Images/shortcuticon.png" />
                    </a>
                    <div class="clear"></div>
                </div>
                <div class="right">
                    <ul>
                        <li onclick="$('header .top_search').slideDown()" class="other"><i class="fa fa-search" aria-hidden="true"></i></li>
                        @if (Session["UserName"] != null)
                        {
                            <li class="user">
                                <i class="fa fa-user" aria-hidden="true"
                                   onclick="location.href='@Url.Action("Index", "Account", new { id = Session["UserName"] })'"></i>
                            </li>
                            <li class="user">
                                <i class="fa fa-sign-out" aria-hidden="true"
                                   onclick="location.href='@Url.Action("Logout", "Account")'"></i>
                            </li>
                        }
                        else
                        {
                            <li>
                                <a href="/account/register">
                                    <button id="register">Đăng ký</button>
                                </a>
                            </li>
                            <li>
                                <a href="/account/login">
                                    <button id="login">Đăng nhập</button>
                                </a>
                            </li>
                        }
                    </ul>
                    <div class="clear"></div>
                </div>
                <div class="top_search">
                    <form method="get" action="@Url.Action("Index", "Home")">
                        <input class="search" value="@ViewBag.Keyword" id="search_input" name="search" placeholder="Bạn muốn tìm truyện gì?" />
                        <button type="submit">
                            <i class="fa fa-search" aria-hidden="true"></i>
                        </button>
                    </form>
                </div>
                <div class="clear"></div>
            </div>
        </div>
        <div class="bottom">
            <div class="div_middle">
                <ul id="header_left_menu">
                    <li>
                        <p>
                            @Html.ActionLink("Trang chủ", "Index", "Home")
                        </p>
                    </li>
                    <li class="menu_hidden" onclick="toggle_visibility('the_loai');">
                        <p class="tags_name pc_hover mega_menu">
                            Thể loại
                            <i class="fa fa-caret-down"></i>
                        </p>
                        <div class="hidden_menu book_tags" id="the_loai">
                            <div class="div_middle">
                                <div class="book_tags_content">
                                    @Html.Action("Category", "Home")
                                    <div class="clear"></div>
                                </div>
                            </div>
                        </div>
                    </li>
                    <li class="menu_hidden">
                        <a href="@Url.Action("SachMoi", "Home")">Sách mới</a>
                    </li>

                    <li class="menu_hidden">
                        <a href="@Url.Action("XepHang", "Home")">Xếp hạng</a>

                    </li>
                    <li class="menu_hidden">
                        @Html.ActionLink("Theo dõi", "Follow", "Account")
                    </li>
                    <li class="menu_hidden">
                        @Html.ActionLink("Lịch sử", "History", "Account")
                    </li>
                </ul>
                <div class="clear"></div>
            </div>
            <div class="nav_menu mobile_display">
                <i onclick="show_bottom_menu(this)" class="fa fa-list" aria-hidden="true"></i>
            </div>
        </div>
        <div class="clear"></div>
    </header>
    <div class="content">
        @RenderBody()

    </div>
    <footer>
        <div class="intro">
            <h3>Giới thiệu</h3>
            <p>Web Đọc Sách Online Trên Mạng, Chỉ Đọc Được Khi Có Kết Nối Internet</p>
            <p>SĐT : 1900 1 Tông zô mặt :3</p>
        </div>
        <div class="categories">
            <h3>Thể loại</h3>
            @Html.Action("Category", "Home")
        </div>
        <div class="ranking">
            @Html.Action("TopBooks", "Home")
        </div>
        <div class="social-icon">
            <h3>Theo dõi chúng tôi</h3>
            <ul>
                <li>
                    <a href="https://www.facebook.com/ni.830">
                        <img src="~/images/Contacts/fb.png" style="width: 100px; height: 100px">
                    </a>
                </li>
                <li><a href="https://www.youtube.com/channel/UC4L7RuHAgJzIv-ByGSle-JQ"><img src="~/images/Contacts/ytb.png" style="width: 100px; height: 100px"></a></li>
            </ul>
        </div>
        <p>&copy; @DateTime.Now.Year - DoAn</p>
    </footer>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js" type="text/javascript"></script>
    <script src="~/Scripts/myscripts/myjs.js" type="text/javascript"></script>

    @Scripts.Render("~/bundles/bootstrap")

    @RenderSection("scripts", required: false)
